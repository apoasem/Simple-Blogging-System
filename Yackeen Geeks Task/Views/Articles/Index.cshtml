@model IEnumerable<Yackeen_Geeks_Task.Models.Article>
@{
    ViewBag.Title = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Articles</h2>

<ul class="nav nav-tabs" id="articlesTabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="allArticlesTab" data-toggle="tab" href="#viewArticlesTab">All Articles</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="articleConfigTab" data-toggle="tab" href="#articleTab">New Article</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="viewArticlesTab">
        <div id="articlesTableContainer">
            @Html.Partial("_ArticlesTablePartial", Model)
        </div>
    </div>

    <div class="tab-pane fade" id="articleTab">
        @Html.Action("Create", "Articles")
    </div>
</div>