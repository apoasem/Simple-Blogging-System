@model Yackeen_Geeks_Task.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">
    <select class="form-control" onchange="filterArticlesByCategory(this)">
        <option disabled selected>Filter by category</option>
        @foreach (var category in Model.CategoriesList)
        {
            <option value="@category.Id"> @category.Name </option>
        }
    </select>
</div>

@if (Model.ArticlesList.Count() == 0)
{
    <div class="w-100 h-100">
        <img src="~/Images/empty_state.png" class="img-fluid" alt="empty" />
    </div>
}
else
{
    <div id="articlesContainer">
        @Html.Partial("_ArticlesPartial", Model.ArticlesList)
    </div>
}